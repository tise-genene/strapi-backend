# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=development

# Database Configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=scholarship_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password

# Security Configuration
APP_KEYS="toBeModified1,toBeModified2"
API_TOKEN_SALT=your_api_token_salt
ADMIN_JWT_SECRET=your_admin_jwt_secret
TRANSFER_TOKEN_SALT=your_transfer_token_salt
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Storage Configuration
UPLOAD_PROVIDER=local
UPLOAD_PROVIDER_OPTIONS={}

# CORS Configuration
ADMIN_CORS=true
API_CORS=true

# Cache Configuration
CACHE_ENABLED=false
CACHE_PROVIDER=memory

# API Documentation
API_DOCUMENTATION_ENABLED=true
API_DOCUMENTATION_PATH=/api-docs

# Monitoring
MONITORING_ENABLED=false
MONITORING_PATH=/monitoring

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_LIMIT=100

# Error Reporting
ERROR_REPORTING_ENABLED=false
ERROR_REPORTING_SERVICE=sentry
ERROR_REPORTING_DSN=your_sentry_dsn

# External Services
STORAGE_PROVIDER=aws-s3
STORAGE_BUCKET_NAME=your-bucket-name
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY_ID=your_access_key
STORAGE_SECRET_ACCESS_KEY=your_secret_key

# Feature Flags
FEATURE_FLAG_NEW_API=false
FEATURE_FLAG_EMAIL_VERIFICATION=true
FEATURE_FLAG_MULTIPLE_UPLOADS=true

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google-analytics
ANALYTICS_ID=your_analytics_id

# Session Configuration
SESSION_SECRET=your_session_secret
SESSION_LIFETIME=1440
SESSION_COOKIE_NAME=strapi.sid

# Admin Panel
ADMIN_JWT_LIFETIME=3600
ADMIN_REFRESH_TOKEN_LIFETIME=86400
ADMIN_PASSWORD_RESET_TOKEN_LIFETIME=3600
ADMIN_EMAIL_CONFIRMATION_TOKEN_LIFETIME=3600

# API Rate Limiting
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_LIMIT=100
API_RATE_LIMIT_ENABLED=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_HEADERS_REFERRER_POLICY=same-origin
SECURITY_HEADERS_XSS_PROTECTION=true
SECURITY_HEADERS_CONTENT_SECURITY_POLICY=true
SECURITY_HEADERS_HSTS=true
SECURITY_HEADERS_FRAME_GUARD=true
SECURITY_HEADERS_CSP_POLICY="default-src 'self'"
